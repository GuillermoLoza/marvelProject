.home {
  display: grid
  height: 100vh
  width: 100vw
  grid-template-rows: 55% 45%;
  justify-content: center;
}

.title {
  align-self: end;
  justify-self: center;
  font-family: Roboto Condensed;
  font-size: 120px;
  color: #a62828;
}

.home__home__link 
  grid-row: 1/2;
  font-family: 'Roboto Condensed', sans-serif;
  font-size: 20px;
  font-weight: normal;
  font-style: normal;
  font-stretch: condensed;
  line-height: 1.2;
  letter-spacing: normal;
  text-align: left;
  text-decoration: none;
  color: #707070;
  padding-left: 7.5%;
    
.home__home__link:after
  content ""
  width: 0px;
  height: 2px;
  display: block
  background: #707070;
  transition: all 300ms ease
 &.home__home__link:hover:after {
      width: 100%
      background: #4a4a4a
 }
 &.home__home__link:hover
      color: #4a4a4a

.home__title
  font-family: 'Roboto Condensed', sans-serif
  font-size 20px
  font-weight normal
  font-style normal
  font-stretch condensed
  line-height 1.2
  letter-spacing normal
  text-align center
  color #686868

.home__search {
  display: flex;
  width: 100%;
  align-items: baseline;
  padding-right: 7.5%;
}

.home__search__input {
    border-radius: 15px;
    border: 1px #707070 solid;
    padding: 5px 5px 5px 25px;
    width: 100%
}

.home__search__send {
  position: relative;
  left: 5%;
  height: 27px;
  width: 27px;
  border: none;
  background-image:  url("../components/icons/search-gray.svg");
  background-repeat: no-repeat;
  background-size: contain;
  background-color: inherit;
  cursor: pointer;
  top: 1.5%;
}