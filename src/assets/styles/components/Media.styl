
//ipad

@media (max-width: 769px) 
    .appBody
        grid-template-rows: 9% 41% 41% 9% 
        max-height: none

    .header 
        grid-row: 1/2
        grid-column: 1/3
        background-color: #ab3232
        box-shadow: 0 1px 4px 2px #1e1e1e78

    .header__home__link
        color white

    .header__title
        color white

    .header__search__input 
        border-color: white

    .header__search__send 
        filter: brightness(100)
        

    .character
        grid-row: 2/3
        grid-column: 1/3
        grid-template-columns: 60% 40%
        grid-template-rows: 1fr

    .content 
        padding: 10% 7.5% 20% 7.5%

    .character-details
        grid-row: 1/2

    .hero
        grid-row: 3/4
        grid-column: 1/3
    
    .footer
        grid-row: 4/5   
        grid-column: 1/3
