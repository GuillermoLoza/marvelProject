.header {
  display: flex;
  grid-column: 1/2;
  justify-content: space-between;
  align-content: center;
}

.header__home__link 
  grid-row: 1/2;
  font-family: 'Roboto Condensed', sans-serif;
  font-size: 20px;
  font-weight: normal;
  font-style: normal;
  font-stretch: condensed;
  line-height: 1.2;
  letter-spacing: normal;
  text-align: left;
  text-decoration: none;
  color: #707070;
  align-self: center;
  padding-left: 7.5%;
    
.header__home__link:after
  content ""
  width: 0px;
  height: 1px;
  display: block
  background: #686868;
  transition: all 300ms ease
 &.header__home__link:hover:after {
      width: 100%
    }


.header__title
  font-family: 'Roboto Condensed', sans-serif
  font-size 20px
  font-weight normal
  font-style normal
  font-stretch condensed
  line-height 1.2
  letter-spacing normal
  text-align center
  color #686868
  align-self: center

.header__search {
  display: flex;
  align-content: center;
  justify-items: left;
  align-items: center;
  position: relative;
  z-index: 0;
  padding-right: 7.5%;
}

.header__search_input {
    border-radius: 15px;
    border: 1px #707070 solid;
    padding: 5px 5px 5px 25px;
}

.header__search__send {
    height: 30px;
    width: 30px;
    border-radius: 100% ;
    border: none;
    background: #707070; /* Set the bg image here. with "no-repeat" */
    cursor: pointer
}
