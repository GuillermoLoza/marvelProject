
.header {
  display: flex;
  grid-column: 2/3;
  grid-row: 1/2
  justify-content: space-between;
  align-content: center;
}

.header__title
  font-family: 'Roboto Condensed', sans-serif
  font-size 20px
  font-weight normal
  font-style normal
  font-stretch condensed
  line-height 1.2
  letter-spacing normal
  text-align center
  color #686868
  align-self: center
  padding-left: 7.5%


.header__search {
  display: flex;
  padding-right: 7.5%;
}

.header__search__input {
  border-radius: 15px;
  border: 1px #707070 solid;
  padding: 5px 5px 5px 25px;
  width: 60%;
  align-self: center;
}

.header__search__send {
    position: relative
    left: 5% 
    height: 21px;
    width: 21px;
    border: none;
    background-image: url("../components/icons/search-gray.svg")
    background-repeat: no-repeat
    background-size: cover
    background-color: inherit
    cursor: pointer
    align-self: center
}
