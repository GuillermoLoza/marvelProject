.character
  width 100%
  height 100%
  display: grid;
  grid-template-rows: 65% 35%;
  background-color #ab3232
  grid-row: 1/3;
  grid-column: 1/2;
  align-items center

.character-navarrows {
  display: flex;
  grid-area: 1/1/2/2;
  width: 80%;
  margin: 0 10% 0 10%;
  color: #686868;
  justify-content: space-between;
  z-index: 1;
  height: 100%;
}
// Arrow hover actions
.character--hidden
  opacity: 0
  margin: 0 15% 0 15%

.character--visible
  opacity: 1
  justify-content: space-between
//  ---- 
.character__arrow{
  align-items: center;
  justify-self: center;
  align-self: center;
  font-size: 58px;
  color: white;
  cursor: pointer
  transition: all 300ms ease
}

.character-img {
  width: 100%;
  height: 100%;
  border: solid 0px #707070;
  background-color: #fff;
  align-self: center;
  justify-self: center;
  grid-area: 1/1/2/2;
}

.character-details {
  height 70%
  display: grid;
  grid-template-columns: 15% 85%;
  grid-template-rows: 50% 50%;
  flex-direction: column;
  grid-row: 2/3;
  justify-content: center;
  padding-left: 10%;
  align-items: center;
}
.character__name {
  grid-row: 1/2;
  grid-column: 2/4;
  font-family: 'Roboto Condensed', sans-serif;
  font-size: 45px;
  font-weight: normal;
  font-style: normal;
  font-stretch: condensed;
  line-height: 1.2;
  letter-spacing: normal;
  text-align: left;
  color: #fff;
  /*! margin: 10% 0 5% 0%; */
  align-self: end;
}

.character__comics__available {

  font-family: 'Roboto Condensed', sans-serif;
  font-size: 21px;
  font-weight: normal;
  font-style: normal;
  font-stretch: condensed;
  line-height: 1.23;
  letter-spacing: normal;
  text-align: left;
  color: #fff;
  grid-column: 2/4;
}

.character__last__modification {
  /*! height: 1em; */
  font-family: 'Roboto Condensed', sans-serif;
  font-size: 21px;
  font-weight: normal;
  font-style: normal;
  font-stretch: condensed;
  line-height: 1.23;
  letter-spacing: normal;
  text-align: left;
  color: #fff;
  /*! margin: 10% 0 0 0; */
}
.character__last__modification
  font-family: 'Roboto Condensed', sans-serif
  font-size 21px
  font-weight normal
  font-style normal
  font-stretch condensed
  line-height 1.23
  letter-spacing normal
  text-align left
  //color #313030
  color white
  

.book-icon
  background-image: url(./icons/book-open-white.svg)
  grid-row: 1/2
  grid-column: 1/2

.pencil-icon
  background-image: url(./icons/pencil-white.svg)
  grid-row: 2/3
  grid-column: 1/2

.icon
  background-repeat: no-repeat
  background-size: contain
  width: 25px
  height 25px
