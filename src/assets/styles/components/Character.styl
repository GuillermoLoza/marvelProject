  background-color #ab3232

.character-details {
  display: flex;
  flex-direction: column;
  grid-row: 2/3;
  justify-content: normal;
  padding-left: 15%;
  align-items: baseline;
}
.character__name {
  font-family: 'Roboto Condensed', sans-serif;
  font-size: 39 px;
  font-weight: normal;
  font-style: normal;
  font-stretch: condensed;
  line-height: 1.2;
  letter-spacing: normal;
  text-align: left;
