.character
  width 100%
  height 100%
  display: grid;
  grid-template-rows: 45% 55%;
  background-color #ab3232
  grid-row: 1/3;
  grid-column: 1/2;


.character-img
  width 100%
  height 100%
  border-radius 6%
  border solid 0px #707070
  background-color #ffffff
  align-self: center
  justify-self: center

.Rectngulo-3
  width 89.4%
  height 0px
