.character
  width 100%
  height 100%
  display: grid;
  grid-template-rows: 40% 60%;
  background-color #ab3232


.character-img
  width 55%
  height 85%
  border-radius 175px
  border solid 0px #707070
  background-color #ffffff
  align-self: center
  justify-self: center

.Rectngulo-3
  width 89.4%
  height 0px
  border solid 1px #707070
  background-color #ab3232

.character-details {
  display: flex
 flex-direction: column;
 grid-row: 2/3;
 justify-content: space-evenly;
 padding-left: 20%;
 align-items: baseline
}

.character__name
  font-family: 'Roboto Condensed', sans-serif
  font-size 40px
  font-weight normal
  font-style normal
  font-stretch condensed
  line-height 1.2
  letter-spacing normal
  text-align left
  color #313030

.character__comics__available
  height 33px
  font-family: 'Roboto Condensed', sans-serif
  font-size 26px
  font-weight normal
  font-style normal
  font-stretch condensed
  line-height 1.23
  letter-spacing normal
  text-align left
  color #313030

.character__last__modification
  height 48px
  font-family: 'Roboto Condensed', sans-serif
  font-size 26px
  font-weight normal
  font-style normal
  font-stretch condensed
  line-height 1.23
  letter-spacing normal
  text-align left
  color #313030
