grayMarvel = #686868


.wrapper
    margin-left: 10%
    margin-right: 10%
    font-family: 'Open sans', sans-serif

.info
    padding-top: 125px
    padding-bottom: 125px

.title
    padding-top: 25px
    font-family: 'Roboto Condensed', sans-serif
    font-weight normal
    font-size: 29px 
    color grayMarvel

.there-are-events 
    color grayMarvel
    font-size: 16px
.gallery
    display grid 
    grid-template-columns: repeat(3, minmax(auto, 30%))
    grid-template-rows: auto
    column-gap: 60px
    row-gap: 25px

.event 
    display flex
    flex-direction: column
.thumbnail
    width 100%
    height 50%
    border-radius: 3px


.description
    text-align: default
    color: grayMarvel
